#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1

export BUILD_TLS = yes
export CFLAGS CPPFLAGS LDFLAGS
export DEB_BUILD_MAINT_OPTIONS = hardening=+all optimize=+lto
export DEB_CFLAGS_MAINT_APPEND = -I/usr/include/liblzf
export DEB_LDFLAGS_MAINT_APPEND = -Wl,-no-as-needed -ldl -latomic -llzf

# Build jemalloc in parallel
ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	MAKEFLAGS += -j$(NUMJOBS)
	export MAKEFLAGS
endif

# Custom MAKE_FLAGS logic (moved from Dockerfile)
export MAKE_FLAGS = SERVER_CFLAGS='-Werror' BUILD_TLS=yes USE_FAST_FLOAT=yes USE_REDIS_SYMLINKS=no

override_dh_auto_configure:
	# Conditional flags for MAJOR and architecture
	if [ "$MAJOR" -ge 8 ]; then \
		export MAKE_FLAGS="$$MAKE_FLAGS BUILD_RDMA=yes"; \
	fi
	if [ "$(dpkg --print-architecture)" = "arm64" ]; then \
		export MAKE_FLAGS="$$MAKE_FLAGS CFLAGS+=-latomic"; \
	fi

%:
	dh $@

override_dh_auto_clean:
	dh_auto_clean

override_dh_auto_build: override_dh_auto_configure
	dh_auto_build -- V=1 USE_SYSTEM_JEMALLOC=yes USE_SYSTEMD=yes USE_JEMALLOC=yes $(MAKE_FLAGS)

override_dh_auto_install:
	dh_auto_install

override_dh_installchangelogs:
	dh_installchangelogs --keep 00-RELEASENOTES

override_dh_installsystemd:
	dh_installsystemd --name=valkey-server --no-enable --no-start
	dh_installsystemd --name=valkey-server@ --no-enable --no-start
	dh_installsystemd --name=valkey-sentinel --no-enable --no-start
	dh_installsystemd --name=valkey-sentinel@ --no-enable --no-start

override_dh_auto_test:
